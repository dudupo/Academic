function! MySplit( fname )
  let bufnum=bufnr(expand(a:fname))
  let winnum=bufwinnr(bufnum)
  if winnum != -1
    " Jump to existing split
  else
    " Make new split as usual
    exe "split " . a:fname
    exe "set syntax=vim"
    exe "set filetype=vim"
    exe "resize -15"
    exe "winc p"
    "exe "set lines=20"
  endif
endfunction

