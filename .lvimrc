function! g:Series(_char, _end_sym)
  let l:ret = ""
  let l:c = 0
  let l:terms = 3  
  let l:tempchar = a:_char
  let l:tempesym = a:_end_sym
  while c <= terms
    if c < terms
      let ret = ret . tempchar .  "_{" . c . "},"
    else
      let ret = ret . "... " . tempchar .  "_{"  . tempesym  . "}" 
    endif
    let c += 1 
  endwhile
  execute 'normal i'.ret 
  return 0
endfunction
